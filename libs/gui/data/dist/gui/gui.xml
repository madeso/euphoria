<root
    cursor_image="gui/cursor_pointer3D.png"
    hover_image="gui/cursor_hand.png">
    
   <skins
        name="default"
        font="guifont.xml"
        button_image="gui/glassPanel_projection.png"
        text_size="30">
            <button_idle
                scale="1.0"
                dx="0" dy="0"
                interpolate_position="smooth_step3"
                interpolate_position_time="0"
                interpolate_size= "smooth_step3"
                interpolate_size_time= "0.2"
                interpolate_color= "smooth_step3"
                interpolate_color_time= "0">
                <image_color r="1.0" g="1.0" b="1.0" />
                <text_color r="1.0" g="1.0" b="1.0" />
            </button_idle>
        <button_hot
            scale="1.1"
            interpolate_size="smooth_step3"
            interpolate_size_time="0.2"
            dx="0"
            dy="0"
            interpolate_position="smooth_step3"
            interpolate_position_time="0"
            interpolate_color="smooth_step3"
            interpolate_color_time="0">
            <image_color r="1.0" g="1.0" b="1.0" />
            <text_color r="1.0" g="1.0" b="1.0" />
        </button_hot>
        <button_active_hot
            scale="0.9"
            interpolate_size="smooth_step3"
            interpolate_size_time="0.2"
            dx="0"
            dy="0"
            interpolate_position="smooth_step3"
            interpolate_position_time="0"
            interpolate_color="smooth_step3"
            interpolate_color_time="0">
            <image_color r="1.0" g="1.0" b="1.0" />
            <text_color r="1.0" g="1.0" b="1.0" />
        </button_active_hot>
    </skins>
    <root>
        <layout>
            <table padding="0">
                <expanded_cols>true</expanded_cols>
                <expanded_cols>false</expanded_cols>
                <expanded_cols>true</expanded_cols>

                <expanded_rows>true</expanded_rows>
                <expanded_rows>false</expanded_rows>
                <expanded_rows>true</expanded_rows>
            </table>
        </layout>
            <widgets
                name="root panel"
                column="1" row="1"
                preferred_width="0" preferred_height="0">
                <margin left="0" right="0" top="0" bottom="0" />
                <padding left="0" right="0" top="0" bottom="0" />
                <panel>
                    <container>
                        <layout>
                            <single_row padding="0" />
                        </layout>

                        <widgets
                            preferred_width="0"
                            name="hello btn"
                            column="0" row="0"
                            preferred_width="0" preferred_height="0">
                            <margin left="10" right="10" top="3" bottom="3" />
                            <padding left="3" right="3" top="3" bottom="3" />
                            <button 
                                text="@cross"
                                skin="default"
                                command="said hello" />
                        </widgets>

                        <widgets
                            name="world btn"
                            column="0" row="0"
                            preferred_width="0" preferred_height="0">
                            <margin left="10" right="10" top="3" bottom="3" />
                            <padding left="3" right="3" top="3" bottom="3" />
                            <button 
                                text="@check  save or something"
                                skin="default"
                                command="said world" />
                        </widgets>
                    </container>
                </panel>
            </widgets>
    </root>
</root>
