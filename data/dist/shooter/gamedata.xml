<game title="Space Shooter">
    <clear_color hex="#5E3F6B"/>
    <viewport
        type="FitWithBlackBars"
        width="800"
        height="60" />
    
    <bings key="up" key="w" />
    <bings key="down" key="s" />
    <bings key="left" key="a" />
    <bings key="right" key="d" />
    <bings key="fire" key="space" />
    
    <templates name="player">
        <position x="200" y="40"/>
        <sprite path="playerShip1_blue.png" />
        <custom name="player"/>
    </templates>
    <templates name="shot">
        <position x="0" y="0"/>
        <sprite path="laserBlue07.png" />
        <custom name="move_up" />
        <custom name="timeout" />
        <custom name="destroy_outside" />
    </templates>
    <templates name="starSmall">
        <position x="50" y="50" />
        <sprite path="starSmall.png"/>
        <custom name="star">
            <speed><number value="100"/></speed>
            <random_boost><number value="50"/></random_boost>
        </custom>
    </templates>
    <templates name="starBig">
        <position x="50" y="50" />
        <sprite path="starBig.png" />
        <custom name="star">
            <speed><number value="50"/></speed>
            <random_boost><number value="20"/></random_boost>
        </custom>
    </templates>
</game>
