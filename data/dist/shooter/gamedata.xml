<game title="Space Shooter">
    <clear_color hex="#5E3F6B"/>
    <viewport
        type="FitWithBlackBars",
        width="800"
        height="60" />
    <binds>
        <up key="w" />
        <down key="s" />
        <left key="a" />
        <right key="d" />
        <fire key="space" />
    </binds>
    <templates>
        <player>
            <position x="200" y="40"/>
            <sprite path="playerShip1_blue.png" />
            <custom name="player"/>
        </player>
        <shot>
            <position x="0" y="0"/>
            <sprite path="laserBlue07.png" />
            <custom name="move_up" />
            <custom name="timeout" />
            <custom name="destroy_outside" />
        </shot>
        <starSmall>
            <position x="50" y="50" />
            <sprite path="starSmall.png"/>
            <custom name="star">
                <speed><number value="100"/></speed>
                <random_boost><number value="50"/></random_boost>
            </custom>
        </starSmall>
        <starBig>
            <position x="50" y="50" />
            <sprite path="starBig.png" />
            <custom name="star">
                <speed><number value="50"/></speed>
                <random_boost><number value="20"/></random_boost>
            </custom>
        </starBig>
    </templates>
</game>
