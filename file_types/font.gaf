package font;

struct FontFile {
  string file;
  string characters;
}

struct SingleImage {
  string file;
  string alias;
  float scale = 1.0f;
  int32 bearing_x;
  int32 bearing_y;
  int32 advance;
}

struct Bultin {
  // todo(Gustav): remove this...
  int32 scale = 1;
}

struct Source {
  // only 1
  FontFile? font;
  SingleImage? image;
  Bultin? builtin;
  // add character from tilemap and images
}

struct Root {
  float size;
  Source sources[];
}
